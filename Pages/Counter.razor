@page "/counter"
@using System.Timers;
@implements IDisposable
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private uint currentCount = 1;
    private Timer Timer { get; set; } = new Timer(1000);

    protected override void OnInitialized()
    {
        Timer.Elapsed += AutoClicker;
        Timer.Start();
    }
    private void IncrementCount()
    {
        currentCount += currentCount;
    }

    private void AutoClicker(object sender, ElapsedEventArgs e)
    {
        Console.WriteLine("AutoClicker clicked");
        IncrementCount();
        StateHasChanged();
    }

    public void Dispose()
    {
        Timer.Elapsed -= AutoClicker;
    }
}